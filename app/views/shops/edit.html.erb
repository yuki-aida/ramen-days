<% provide(:title, "店舗情報の編集") %>
<h1>店舗情報の編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@shop) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "店舗名" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :adress, "住所" %>
      <%= f.text_field :adress, class: 'form-control' %>

      <%= f.label :area, "エリア" %>
      <%= f.text_field :area, class: 'form-control' %>

      <%= f.label :station, "最寄駅" %>
      <%= f.text_field :station, class: 'form-control' %>
      
      <%= f.label :tel, "電話番号" %>
      <%= f.text_field :tel, class: 'form-control' %>
      
      <%= f.label :business_hour, "営業時間" %>
      <%= f.text_field :business_hour, class: 'form-control' %>
      
      <%= f.label :holiday, "定休日" %>
      <%= f.text_field :holiday, class: 'form-control' %>
      
      <%= f.label :access, "アクセス" %>
      <%= f.text_field :access, class: 'form-control' %>
      
      <span class="picture">
      <%= f.label :image, "写真を追加" %>
      <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
      </span>
      
      <script type="text/javascript">
      $('#shop_image').bind('change', function() {
      var size_in_megabytes = this.files[0].size/1024/1024;
      if (size_in_megabytes > 5) {
        alert('画像サイズは5MB以内です');
      }
      });
      </script>

      <%= f.submit "店舗情報を更新", class: "btn btn-info" %>
    <% end %>
    <br>
    <% if current_user?(@user) %>
    <%= link_to "この店舗を削除する", @shop, method: :delete,
                                  data: { confirm: "本当に削除しますか？" } %>
  <% end %>
  </div>
</div>